@article{Ibanez2012,
 author = {Ib{\'a}{\~n}ez, Carles and Alcaraz, Carles and Caiola, Nuno and Rovira, Albert and Trobajo, Rosa and Alonso, Miguel and Duran, Concha and Jim{\'e}nez, Pere J. and Munn{\'e}, Antoni and Prat, Narc{\'i}s},
