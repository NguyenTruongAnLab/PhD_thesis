@article{Heisler2008,
 author = {Heisler, J. and Glibert, P. M. and Burkholder, J. M. and Anderson, D. M. and Cochlan, W. and Dennison, W. C. and Dortch, Q. and Gobler, C. J. and Heil, C. A. and Humphries, E. and Lewitus, A. and Magnien, R. and Marshall, H. G. and Sellner, K. and Stockwell, D. A. and Stoecker, D. K. and Suddleson, M.},
