@article{Mortimer1999,
 author = {Mortimer, R. J. G. and Krom, M. D. and Watson, P. G. and Frickers, P. E. and Davey, J. T. and Clifton, R. J.},
 year = {1999},
 title = {Sediment-water exchange of nutrients in the intertidal zone of the Humber estuary, UK},
 pages = {261--279},
 volume = {37},
 number = {3-7},
 journal = {Mar. Pollut. Bull.},
 abstract = {Nutrient pore-water profiles, sediment-water exchange and sediment characteristics were measured for six intertidal mudflat sites throughout the Humber Estuary over the different seasons. The Humber is a highly dynamic, non steady state system and hence neither the biogeochemical zones nor the macrofaunal communities were sustained for long periods of time. Sediment mixing and resuspension on tidal, episodic or seasonal timescales was the predominant control on nutrients. Over an annual cycle, mean measured fluxes were -8.7 mmoles/m2/day nitrate, 3.7 mmoles/m2/day ammonia and 0.2 mmoles/m2/ day nitrite. Net phosphate and silicate fluxes were very small. The intertidal mudflats were a sink for nitrate (-1000 kmol/day), a major source of ammonia (430 kmol/day) and a minor source of nitrite (25 kmol/day). Nitrate influxes decreased in a seaward direction (-13.4 mmoles/m2/day in inner estuary, -11.0 mmoles/m2/day in mid-estuary, -5.2 mmoles/m2/day in outer estuary), but when the area of the mudflats in each area is taken into account, both the mid and outer estuary were sinks for approximately 40{\%} of the total nitrate taken up. In contrast, the outer estuary was the source of c. 90{\%} of the ammonia and 105{\%} of the nitrite (the inner estuary being a minor sink of nitrite).}
}


@article{Muller2016,
 author = {M{\"u}ller, Denise and Bange, Hermann W. and Warneke, Thorsten and Rixen, Tim and M{\"u}ller, Moritz and Mujahid, Aazani and Notholt, Justus},
 year = {2016},
 title = {Nitrous oxide and methane in two tropical estuaries in a peat-dominated region of northwestern Borneo},
 pages = {2415--2428},
 volume = {13},
 number = {8},
 journal = {Biogeosciences},
 abstract = {Estuaries are sources of nitrous oxide (N2O) and methane (CH4) to the atmosphere. However, our present knowledge of N2O and CH4 emissions from estuaries in the tropics is very limited because data are scarce. In this study, we present first measurements of dissolved N2O and CH4 from two estuaries in a peat-dominated region of northwestern Borneo. Two campaigns (during the dry season in June 2013 and during the wet season in March 2014) were conducted in the estuaries of the Lupar and Saribas rivers. Median N2O concentrations ranged between 7.2 and 12.3 nmol L-1 and were higher in the marine end-member (13.0 $\pm$ 7.0 nmol L-1). CH4 concentrations were low in the coastal ocean (3.6 $\pm$ 0.2 nmolg L-1) and higher in the estuaries (medians between 10.6 and 64.0 nmol L-1). The respiration of abundant organic matter and presumably anthropogenic input caused slight eutrophication, which did not lead to hypoxia or enhanced N2O concentrations, however. Generally, N2O concentrations were not related to dissolved inorganic nitrogen concentrations. Thus, the use of an emission factor for the calculation of N2O emissions from the inorganic nitrogen load leads to an overestimation of the flux from the Lupar and Saribas estuaries. N2O was negatively correlated with salinity during the dry season, which suggests a riverine source. In contrast, N2O concentrations during the wet season were not correlated with salinity but locally enhanced within the estuaries, implying that there were additional estuarine sources during the wet (i.e., monsoon) season. Estuarine CH4 distributions were not driven by freshwater input but rather by tidal variations. Both N2O and CH4 concentrations were more variable during the wet season. We infer that the wet season dominates the variability of the N2O and CH4 concentrations and subsequent emissions from tropical estuaries. Thus, we speculate that any changes in the Southeast Asian monsoon system will lead to changes in the N2O and CH4 emissions from these systems. We also suggest that the ongoing cultivation of peat soil in Borneo is likely to increase N2O emissions from these estuaries, while the effect on CH4 remains uncertain.}
}


@article{Murray2015,
 author = {Murray, Rachel H. and Erler, Dirk V. and Eyre, Bradley D.},
 year = {2015},
 title = {Nitrous oxide fluxes in estuarine environments: Response to global change},
 pages = {3219--3245},
 volume = {21},
 number = {9},
 journal = {Global Change Biology},
 abstract = {Nitrous oxide is a powerful, long-lived greenhouse gas, but we know little about the role of estuarine areas in the global N{\textless}inf{\textgreater}2{\textless}/inf{\textgreater}O budget. This review summarizes 56 studies of N{\textless}inf{\textgreater}2{\textless}/inf{\textgreater}O fluxes and associated biogeochemical controlling factors in estuarine open waters, salt marshes, mangroves, and intertidal sediments. The majority of in situ N{\textless}inf{\textgreater}2{\textless}/inf{\textgreater}O production occurs as a result of sediment denitrification, although the water column contributes N{\textless}inf{\textgreater}2{\textless}/inf{\textgreater}O through nitrification in suspended particles. The most important factors controlling N{\textless}inf{\textgreater}2{\textless}/inf{\textgreater}O fluxes seem to be dissolved inorganic nitrogen (DIN) and oxygen availability, which in turn are affected by tidal cycles, groundwater inputs, and macrophyte density. The heterogeneity of coastal environments leads to a high variability in observations, but on average estuarine open water, intertidal and vegetated environments are sites of a small positive N{\textless}inf{\textgreater}2{\textless}/inf{\textgreater}O flux to the atmosphere (range 0.15-0.91; median 0.31; Tg N{\textless}inf{\textgreater}2{\textless}/inf{\textgreater}O-N yr{\textless}sup{\textgreater}-1{\textless}/sup{\textgreater}). Global changes in macrophyte distribution and anthropogenic nitrogen loading are expected to increase N{\textless}inf{\textgreater}2{\textless}/inf{\textgreater}O emissions from estuaries. We estimate that a doubling of current median NO{\textless}inf{\textgreater}3{\textless}/inf{\textgreater}{\textless}sup{\textgreater}-{\textless}/sup{\textgreater} concentrations would increase the global estuary water-air N{\textless}inf{\textgreater}2{\textless}/inf{\textgreater}O flux by about 0.45 Tg N{\textless}inf{\textgreater}2{\textless}/inf{\textgreater}O-N yr{\textless}sup{\textgreater}-1{\textless}/sup{\textgreater} or about 190{\%}. A loss of 50{\%} of mangrove habitat, being converted to unvegetated intertidal area, would result in a net decrease in N{\textless}inf{\textgreater}2{\textless}/inf{\textgreater}O emissions of 0.002 Tg N{\textless}inf{\textgreater}2{\textless}/inf{\textgreater}O-N yr{\textless}sup{\textgreater}-1{\textless}/sup{\textgreater}. In contrast, conversion of 50{\%} of salt marsh to unvegetated area would result in a net increase of 0.001 Tg N{\textless}inf{\textgreater}2{\textless}/inf{\textgreater}O-N yr{\textless}sup{\textgreater}-1{\textless}/sup{\textgreater}. Decreased oxygen concentrations may inhibit production of N{\textless}inf{\textgreater}2{\textless}/inf{\textgreater}O by nitrification; however, sediment denitrification and the associated ratio of N{\textless}inf{\textgreater}2{\textless}/inf{\textgreater}O:N{\textless}inf{\textgreater}2{\textless}/inf{\textgreater} is expected to increase.}
}


