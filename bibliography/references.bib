@article{Mayorga2010,
 author = {Mayorga, Emilio and Seitzinger, Sybil P. and Harrison, John A. and Dumont, Egon and Beusen, Arthur H.W. and Bouwman, A. F. and Fekete, Balazs M. and Kroeze, Carolien and {van Drecht}, Gerard},
