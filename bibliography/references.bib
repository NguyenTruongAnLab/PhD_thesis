@article{Skerratt2013,
 author = {Skerratt, Jennifer and Wild-Allen, Karen and Rizwi, Farhan and Whitehead, Jason and Coughanowr, Christine},
 year = {2013},
 title = {Use of a high resolution 3D fully coupled hydrodynamic, sediment and biogeochemical model to understand estuarine nutrient dynamics under various water quality scenarios},
